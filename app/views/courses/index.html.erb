<% provide :title, t("courses.title") %>
<h1><%= t "admin.course_list" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th><%= sort_link @search, :name, t("search.name") %></th>
          <th><%= sort_link @search, :description,
            t("search.description") %></th>
          <th><%= sort_link @search, :status, t("search.status") %></th>
        </tr>
      </thead>
      <tbody>
        <%= render "course" %>
      </tbody>
    </table>
    <%= paginate @courses %>
  </div>
</div>

<% provide :title, t("courses.title") %>
<h1><%= t "admin.course_list" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th><%= t "subjects.name" %></th>
          <th><%= t "subjects.description" %></th>
          <th><%= t "subjects.status" %></th>
        </tr>
      </thead>
      <tbody>
        <%= render "course" %>
      </tbody>
    </table>
    <%= paginate @courses %>
  </div>
</div>

<%= form_for [:admin, @course], url: admin_course_assign_trainees_path(@course) do |f| %>
  <div class="col-md-6 col-md-offset-3">
    <h4 class="center"><%= t "admin.users.supervisor" %></h4>
    <% if @supervisors.any? %>
      <%= f.collection_check_boxes :user_ids, @supervisors, :id,
          :name do |s| %>
        <div class="checkbox">
          <%= s.check_box %>
          <%= s.label %>
        </div>
      <% end %>
    <% end %>
    <%= f.submit t(:update_profile), class: "btn btn-primary" %>
  </div>
<% end %>

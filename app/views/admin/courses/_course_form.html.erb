<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @course] do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, required: true, class: "form-control" %>

      <%= f.label :description %>
      <%= f.text_field :description, class: "form-control" %>
      
      <h4><%= f.label :subjects %></h4>
      <%= f.collection_check_boxes(:subject_ids, @subjects,
        :id, :name) do |s| %>
        <div class="checkbox">
          <%= s.check_box %>
          <%= s.label %>
        </div>
      <% end %>

      <%= f.submit t("admin.save"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

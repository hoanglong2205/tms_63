<% provide :title, t("admin.course_index") %>
<h1><%= t "admin.course" %></h1>

<div class="row">
  <div class="center">
    <%= link_to t("admin.createcourse"), new_admin_course_path,
      class: "btn btn-primary btn-lg" %>
    <div>
      <%= search_form_for [:admin, @search], 
        class: "form-inline" do |f| %>
        <%= f.label :name_cont, t("search.search_user.label_name") %>
        <%= f.text_field :name_cont, placeholder: t("search.search_subject.name"),
          class: "form-control search_select" %>
        <%= f.submit t("search.search"), 
          class: "btn btn-info margin_left_btn_submit" %>
      <% end %>
    </div>
  </div>
  <div class="col-md-6 col-md-offset-3">
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th><%= sort_link @search, :name, t("search.name") %></th>
          <th><%= sort_link @search, :description,
            t("search.description") %></th>
          <th><%= t "courses.action" %></th>
          <th><%= sort_link @search, :status, t("search.status") %></th>
        </tr>
      </thead>
      <tbody>
        <%= render "course" %>
      </tbody>
    </table>
    <%= paginate @courses %>
  </div>
</div>

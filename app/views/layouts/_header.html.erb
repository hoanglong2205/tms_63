<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("home.content"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <% if current_user.admin? %>
            <li><%= link_to t("home.title"), root_path %></li>
            <li><%= link_to t("help.title"), help_path %></li>
            <li><%= link_to t("admin.users.title"), admin_users_path %></li>
            <li><%= link_to t("subjects.title"), admin_subjects_path %></li>
            <li><%= link_to t("courses.title"), admin_courses_path %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t "admin.admin" %><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to t(:log_out), destroy_user_session_path,
                    method: :delete %>
                </li>
              </ul>
            </li>
          <% elsif current_user.supervisor? %>
            <li><%= link_to t("courses.title"), supervisor_courses_path %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t "admin.users.supervisor" %><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to t(:log_out), destroy_user_session_path,
                    method: :delete %>
                </li>
              </ul>
            </li>
          <% end %>
        <% else %>
          <li><%= link_to t(:log_in), new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
